<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Authors</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        table, th, td {
            border: 1px solid black;
        }
        th, td {
            padding: 10px;
            text-align: left;
        }
    </style>
</head>
<body>

    <h1>View Authors</h1>

    <?php
    // Assuming you have a function to fetch authors from the database
    // and it returns an array $authors with each element being an associative array representing an author

    // Sample data for demonstration purposes
    $authors = array(
        array("AuthorFullName" => "John Doe", "Email" => "john.doe@example.com", "Age" => 30),
        array("AuthorFullName" => "Jane Smith", "Email" => "jane.smith@example.com", "Age" => 25),
        // ... Add more authors as needed
    );

    // Sort the authors array by AuthorFullName in ascending order
    usort($authors, function($a, $b) {
        return strcmp($a['AuthorFullName'], $b['AuthorFullName']);
    });

    if (!empty($authors)) {
        echo '<table>';
        echo '<thead>';
        echo '<tr>';
        echo '<th>Author Full Name</th>';
        echo '<th>Email</th>';
        echo '<th>Age</th>';
        echo '</tr>';
        echo '</thead>';
        echo '<tbody>';

        foreach ($authors as $author) {
            echo '<tr>';
            echo '<td>' . $author['AuthorFullName'] . '</td>';
            echo '<td>' . $author['Email'] . '</td>';
            echo '<td>' . $author['Age'] . '</td>';
            echo '</tr>';
        }

        echo '</tbody>';
        echo '</table>';
    } else {
        echo '<p>No authors found.</p>';
    }
    ?>

</body>
